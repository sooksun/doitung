# Environment Variables Template
# Copy this file to .env and fill in the values

# Database
# Format: mysql://user:password@host:port/database
# Example: mysql://root:password@localhost:3306/eqap_db
DATABASE_URL="mysql://user:password@localhost:3306/eqap_db"

# JWT Secret Key
# Generate a strong random string for production
# Example: openssl rand -base64 32
JWT_SECRET="your-secret-key-here-change-in-production"

# Next.js URL
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"

# Node Environment
# Options: development, production, test
NODE_ENV="development"

# Optional: File Upload Settings
# Maximum file size in bytes (default: 10MB)
# MAX_FILE_SIZE=10485760

# Optional: Allowed file types (comma-separated)
# ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,jpg,jpeg,png,mp4,mp3"

# Optional: Upload Directory
# UPLOAD_DIR="./public/uploads"

# Optional: OpenAI API Key (for DE-PLC Co-Pilot AI features)
# Get your key at https://platform.openai.com/api-keys
# OPENAI_API_KEY="sk-..."
